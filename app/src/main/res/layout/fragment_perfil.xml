<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="45sp"
            android:layout_height="45dp"
            android:src="@drawable/arrow_back"
            android:background="@android:color/transparent"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textColor="@color/white"
            android:textSize="28dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/topPanel">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Varias vistas para observar el scroll -->


            <RelativeLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="790dp"
                android:background="@color/ssgray"
                android:fillViewport="true"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/usericon" />

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:text="Nombre..."
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/correo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Correo"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="213dp"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="Informaci칩n"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />


                <LinearLayout
                    android:layout_width="395dp"
                    android:layout_height="60dp"
                    android:elevation="4dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border3"
                    android:layout_marginTop="257dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Expediente..."
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/expediente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:text="286277"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="395dp"
                    android:layout_height="60dp"
                    android:elevation="4dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border4"
                    android:layout_marginTop="314dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Facultad..."
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/facultad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:text="Facultad de Inform치tica"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="395dp"
                    android:layout_height="60dp"
                    android:elevation="4dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border5"
                    android:layout_marginTop="370dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Carrera..."
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/carrera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:text="Ing. de Software"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/cerrar"
                    android:layout_width="395dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:layout_marginTop="445dp"
                    android:textAlignment="textStart"
                    android:paddingStart="37dp"
                    android:textSize="20sp"

                    android:background="@drawable/border3"
                    android:text="Cerrar Sesi칩n"/>



                <Button
                    android:id="@+id/info"
                    android:layout_width="395dp"
                    android:textAlignment="textStart"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:layout_marginTop="495dp"
                    android:paddingStart="37dp"
                    android:textSize="20sp"
                    android:background="@drawable/border5"
                    android:text="Acerca de..."/>


            </RelativeLayout>

            <!-- M치s vistas si lo necesitas -->
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
